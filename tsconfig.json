{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext", // Use ESNext for Vite
    "jsx": "react-jsx", // Enable React 17+ JSX transform
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
